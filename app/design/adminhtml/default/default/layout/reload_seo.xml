<layout>
    <adminhtml_catalog_product_index>
        <reference name="head">
            <action method="addJs">
                <script>reload/jquery.min.js</script>
            </action>
            <action method="addJs">
                <script>reload/seo.js</script>
            </action>
        </reference>
    </adminhtml_catalog_product_index>
    <adminhtml_catalog_product_new>
        <reference name="head">
            <action method="addJs">
                <script>reload/jquery.min.js</script>
            </action>
            <action method="addJs">
                <script>reload/select2/select2.min.js</script>
            </action>
            <action method="addItem">
                <type>js_css</type>
                <name>reload/select2/select2.css</name>
            </action>
            <action method="addJs">
                <script>reload/seo.js</script>
            </action>
            <action method="addJs">
                <script>reload/snippet.js</script>
            </action>
            <action method="addCss">
                <stylesheet>reload_seo/css/seo.css</stylesheet>
            </action>
        </reference>
        <reference name="content">
            <block type="reload_seo/adminhtml_seo" template="reload_seo/seo.phtml" name="seoscore">
                <action method="setData">
                    <name>is_product_view</name>
                    <value>1</value>
                </action>
            </block>
        </reference>
    </adminhtml_catalog_product_new>
