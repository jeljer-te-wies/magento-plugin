<config>
    <!-- Module declaration -->
    <modules>
        <Reload_Seo>
            <version>1.3.6</version>
        </Reload_Seo>
    </modules>
    <global>
        <!-- Blocks -->
        <blocks>
            <reload_seo>
                <class>Reload_Seo_Block</class>
            </reload_seo>
        </blocks>
        <!-- Helpers -->
        <helpers>
            <reload_seo>
                <class>Reload_Seo_Helper</class>
            </reload_seo>
        </helpers>
        <!-- Models -->
        <models>
            <reload_seo>
                <class>Reload_Seo_Model</class>
                <resourceModel>reload_seo_resource</resourceModel>
            </reload_seo>
            <reload_seo_resource>
                <class>Reload_Seo_Model_Resource</class>
                <entities>
                    <!-- The score model table reference -->
                    <score>
                        <table>reload_seo_score</table>
                    </score>
                    <!-- The score rule model table reference -->
                    <scores_rule>
                        <table>reload_seo_scores_rule</table>
                    </scores_rule>
                </entities>
            </reload_seo_resource>
        </models>
        <resources>
            <!-- The setup -->
            <reload_seo_setup>
                <setup>
                    <module>Reload_Seo</module>
                </setup>
            </reload_seo_setup>
        </resources>
        <events>
            <!-- All event observers -->
            <catalog_product_load_after>
                <observers>
                    <reload_seo>
                        <type>singleton</type>
                        <class>reload_seo/observer</class>
                        <method>catalogProductLoadAfter</method>
                    </reload_seo>
                </observers>
            </catalog_product_load_after>
            <catalog_category_load_after>
                <observers>
                    <reload_seo>
                        <type>singleton</type>
                        <class>reload_seo/observer</class>
                        <method>catalogCategoryLoadAfter</method>
                    </reload_seo>
                </observers>
            </catalog_category_load_after>
            <catalog_product_delete_after>
                <observers>
                    <reload_seo>
                        <type>singleton</type>
                        <class>reload_seo/observer</class>
                        <method>catalogProductDeleteAfter</method>
                    </reload_seo>
                </observers>
            </catalog_product_delete_after>
            <catalog_category_delete_after>
                <observers>
                    <reload_seo>
                        <type>singleton</type>
                        <class>reload_seo/observer</class>
                        <method>catalogCategoryDeleteAfter</method>
                    </reload_seo>
                </observers>
            </catalog_category_delete_after>
            <catalog_product_save_after>
                <observers>
                    <reload_seo>
                        <type>singleton</type>
                        <class>reload_seo/observer</class>
                        <method>catalogProductSaveAfter</method>
                    </reload_seo>
                </observers>
            </catalog_product_save_after>
            <catalog_category_save_after>
                <observers>
                    <reload_seo>
                        <type>singleton</type>
                        <class>reload_seo/observer</class>
                        <method>catalogCategorySaveAfter</method>
                    </reload_seo>
                </observers>
            </catalog_category_save_after>
            <core_block_abstract_prepare_layout_after>
                <observers>
                    <reload_seo>
                        <type>singleton</type>
                        <class>reload_seo/observer</class>
                        <method>prepareLayoutAfter</method>
                    </reload_seo>
                </observers>
            </core_block_abstract_prepare_layout_after>
            <catalog_product_collection_load_before>
                <observers>
                    <reload_seo>
                        <type>singleton</type>
                        <class>reload_seo/observer</class>
                        <method>catalogProductCollectionLoadBefore</method>
                    </reload_seo>
                </observers>
            </catalog_product_collection_load_before>
            <adminhtml_catalog_product_grid_prepare_massaction>
                <observers>
                    <reload_seo>
                        <type>singleton</type>
                        <class>reload_seo/observer</class>
                        <method>prepareProductGridMassactions</method>
                    </reload_seo>
                </observers>
            </adminhtml_catalog_product_grid_prepare_massaction>
            <core_block_abstract_to_html_after>
                <observers>
                    <reload_seo>
                        <type>singleton</type>
                        <class>reload_seo/observer</class>
                        <method>afterToHtml</method>
                    </reload_seo>
                </observers>
            </core_block_abstract_to_html_after>
        </events>
    </global>
    <admin>
        <!-- Admin router -->
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <reload_seo before="Mage_Adminhtml">Reload_Seo_Adminhtml</reload_seo>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <reload_seo>
                    <file>reload_seo.xml</file>
                </reload_seo>
            </updates>
        </layout>
	   <translate>
            <modules>
                <Reload_Seo>
                    <files>
                        <default>Reload_Seo.csv</default>
                    </files>
                </Reload_Seo>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <!-- Default configuration -->
        <reload>
            <reload_seo_mappings>
                <reload_seo_mapping_name>name</reload_seo_mapping_name>
                <reload_seo_mapping_short_description>short_description</reload_seo_mapping_short_description>
                <reload_seo_mapping_description>description</reload_seo_mapping_description>
                <reload_seo_mapping_meta_title>meta_title</reload_seo_mapping_meta_title>
                <reload_seo_mapping_meta_keyword>meta_keyword</reload_seo_mapping_meta_keyword>
                <reload_seo_mapping_meta_description>meta_description</reload_seo_mapping_meta_description>
                <reload_seo_mapping_url_key>url_key</reload_seo_mapping_url_key>
                <reload_seo_mapping_status>status</reload_seo_mapping_status>
            </reload_seo_mappings>
        </reload>
    </default>                        
</config>